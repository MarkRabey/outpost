{
  "name": "outpost",
  "version": "0.1.0",
  "license": "SEE LICENSE",
  "main": "./dist/main/main.js",
  "scripts": {
    "ng": "ng",
    "start:production": "NODE_ENV=production electron .",
    "start:main": "npm run build:main && electron .",
    "start:renderer": "ng serve",
    "prestart": "npm run clean",
    "start": "concurrently \"npm run start:renderer\" \"wait-on http-get://localhost:4200 && npm run start:main\"",
    "electron": "electron .",
    "clean": "rm -rf dist",
    "build:main": "tsc -p ./src/main/tsconfig.main.json",
    "build:renderer": "ng build --prod",
    "prebuild": "npm run clean",
    "build": "npm run build:renderer && npm run build:main",
    "precommit": "lint-staged",
    "test": "ng test",
    "lint": "tslint '{src,test,mocks}/**/*.{ts,tsx}' --project ./tsconfig.json",
    "e2e": "ng e2e",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder"
  },
  "lint-staged": {
    "{src,test,mocks}/**/*.{js,ts,tsx,json,css,scss,md}": [
      "prettier --config ./.prettierrc --write",
      "git add"
    ],
    "{src,test,mocks}/**/*.{js,ts,tsx}": [
      "tslint --project ./tsconfig.json --fix",
      "git add"
    ]
  },
  "build": {
    "productName": "ProductName",
    "appId": "org.your.productname",
    "mac": {
      "category": "your.app.category.type"
    },
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/",
      "node_modules/",
      "package.json"
    ],
    "linux": {
      "target": "deb"
    },
    "win": {
      "target": "nsis"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:MarkRabey/outpost.git"
  },
  "author": {
    "name": "Mark Rabey",
    "email": "mark@markrabey.com"
  },
  "bugs": {
    "url": "https://github.com/MarkRabey/outpost/issues"
  },
  "homepage": "https://github.com/MarkRabey/outpost",
  "dependencies": {
    "@angular/animations": "^5.2.0",
    "@angular/common": "^5.2.0",
    "@angular/compiler": "^5.2.0",
    "@angular/core": "^5.2.0",
    "@angular/forms": "^5.2.0",
    "@angular/http": "^5.2.0",
    "@angular/platform-browser": "^5.2.0",
    "@angular/platform-browser-dynamic": "^5.2.0",
    "@angular/router": "^5.2.0",
    "core-js": "^2.4.1",
    "rxjs": "^5.5.6",
    "zone.js": "^0.8.19"
  },
  "devDependencies": {
    "@angular/cli": "~1.7.3",
    "@angular/compiler-cli": "^5.2.0",
    "@angular/language-service": "^5.2.0",
    "@types/jasmine": "~2.8.3",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "~6.0.60",
    "codelyzer": "^4.0.1",
    "concurrently": "^3.5.1",
    "electron": "^1.8.4",
    "electron-builder": "^20.9.2",
    "husky": "^0.14.3",
    "jasmine-core": "~2.8.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~2.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "lint-staged": "^7.0.4",
    "protractor": "~5.1.2",
    "ts-node": "~4.1.0",
    "tslint": "~5.9.1",
    "typescript": "~2.5.3",
    "wait-on": "^2.1.0"
  }
}
